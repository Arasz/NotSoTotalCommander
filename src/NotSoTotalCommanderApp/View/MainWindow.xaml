<Window x:Class="NotSoTotalCommanderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:NotSoTotalCommanderApp.Converters"
        xmlns:local="clr-namespace:NotSoTotalCommanderApp"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800" x:Name="mainWindow"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadFileSystemItemsCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Window.Resources>
        <conv:ExtensionConverter x:Key="ExtensionConverter" />
        <conv:SizeConverter x:Key="SizeConverter" />
        <conv:FileSystemTypeConverter x:Key="FileSystemTypeConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="25" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="Test">
                <MenuItem Header="Test" />
            </MenuItem>
        </Menu>

        <ToolBarTray Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
            <ToolBar>
                <Button Content="Test1" Margin="10,0" />
                <Button Content="Test2" Margin="10,0" />
            </ToolBar>
        </ToolBarTray>

        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <ComboBox HorizontalAlignment="Stretch" Margin="0,0,5,0"
                          ItemsSource="{Binding SystemDrives}" SelectedIndex="0"
                          SelectedItem="{Binding SelectedPath, Mode=TwoWay}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding LoadFileSystemItemsCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
                <TextBlock HorizontalAlignment="Stretch" Margin="5,0,0,0" />
            </StackPanel>
            <ListView ItemsSource="{Binding LeftItemsCollection}" Grid.Row="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Extension" DisplayMemberBinding="{Binding Extension,
                            Converter={StaticResource ExtensionConverter}}" />
                        <GridViewColumn Header="Size" DisplayMemberBinding="{Binding Size,
                            Converter={StaticResource SizeConverter}}" />
                        <GridViewColumn Header="Creation time" DisplayMemberBinding="{Binding CreationTime}" />
                        <GridViewColumn Header="Attribute" DisplayMemberBinding="{Binding Attributes}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <GridSplitter HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="1" />

        <Grid Grid.Row="2" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <ComboBox HorizontalAlignment="Stretch" Margin="0,0,5,0"
                          ItemsSource="{Binding SystemDrives}" SelectedIndex="0" />
                <TextBlock HorizontalAlignment="Stretch" Margin="5,0,0,0" />
            </StackPanel>
            <ListView ItemsSource="{Binding LeftItemsCollection}" Grid.Row="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Creation time" DisplayMemberBinding="{Binding CreationTime}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <StatusBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">
            <StatusBarItem>
                <TextBox Text="Test" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>